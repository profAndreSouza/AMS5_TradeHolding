{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/user",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-api", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/user",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer", "AllowedScopes": [] }
    },
    {
      "DownstreamPathTemplate": "/api/user/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-api", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/user/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer", "AllowedScopes": [] }
    },
    {
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-api", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/auth/login",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/auth/profile",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "user-api", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/auth/profile",
      "UpstreamHttpMethod": [ "GET" ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer", "AllowedScopes": [] }
    },
    {
      "DownstreamPathTemplate": "/api/Currency",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "currency-api", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/currency",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "Bearer", "AllowedScopes": [] }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://gateway-api:8080"
  }
}
